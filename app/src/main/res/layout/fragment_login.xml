<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:context="com.z.ice.apquitsmoke.ui.sign.LoginFragment">

    <EditText
        android:id="@+id/login_phone_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18661965238"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"/>

    <EditText
        android:id="@+id/login_password_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_phone_et"
        android:text="18661965238"
        android:textColor="@color/colorWhite"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_below="@+id/login_password_et"
        android:background="@drawable/sign_btn_bg"
        android:text="Sign in"
        android:textColor="@color/colorWhite"/>
</RelativeLayout>
